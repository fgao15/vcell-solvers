FCC = ifort
FOPT     = -O2 -static -static-intel

FFLAGS   = ${FOPT} ${SFOPT}

LIBRARY  = libblas.a

# Source File Names

FBLAS  =  dnrm2.o daxpy.o ddot.o  dcopy.o dscal.o idamax.o  dswap.o

blas:    ${LIBRARY}

${LIBRARY}: ${FBLAS}
	ar rv ${LIBRARY} *.o
	ranlib ${LIBRARY}

${FBLAS}:
	$(FCC) $(FFLAGS) -c $*.f

clean :
	rm *.o $(LIBRARY)

